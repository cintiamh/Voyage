<%= form_for [:admin, @gallery], :html => {:class => "form-horizontal"} do |f| %>
  <% if @gallery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gallery.errors.count, "error") %> prohibited this gallery from being saved:</h2>

      <ul>
      <% @gallery.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <fieldset>
        <legend>Gallery</legend>

        <div class="control-group">
            <%= f.label :name, :class => "control-label" %>
            <div class="controls">
                <%= f.text_field :name, :class => "input-xxlarge" %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label :order, :class => "control-label" %>
            <div class="controls">
                <%= f.number_field :order %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label :floor, :class => "control-label" %>
            <div class="controls">
                <%= f.number_field :floor %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label :about, :class => "control-label" %>
            <div class="controls">
                <%= f.text_area :about, :rows => 3, :class => "input-xxlarge" %>
            </div>
        </div>

    </fieldset>
    <div class="control-group">
        <%= f.submit "Save", :class => "btn" %>
    </div>

<% end %>
