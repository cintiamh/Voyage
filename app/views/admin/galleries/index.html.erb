<% @galleries.each do |gallery| %>
  <tr>
    <td><%= gallery.name %></td>
    <td><%= gallery.order %></td>
    <td><%= gallery.about %></td>
    <td><%= link_to 'Show', [:admin, gallery] %></td>
    <td><%= link_to 'Edit', edit_admin_gallery_path(gallery) %></td>
    <td><%= link_to 'Destroy', [:admin, gallery], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

