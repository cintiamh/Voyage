<h1>Dashboard</h1>
<div class="row">
    <div class="span4">
        <div class="bs-docs-example">
            <h3>Recent Comments</h3>
            <% if @comments.length <= 0 %>
                <p>There are no comments.</p>
            <% else %>
            <ul class="dashboard_list">
                <% @comments.each do |comment| %>
                    <li><%= link_to sanitize(truncate(comment.content), :length => 150), edit_admin_comment_path(comment) %></li>
                <% end %>
            </ul>
            <% end %>
            <p style="text-align: right">
                <%= link_to "More...", admin_comments_path %>
            </p>
        </div>
    </div>
    <div class="span4">
        <div class="bs-docs-example">
            <h3>Recent Tours</h3>
            <% if @tour_histories.length <= 0 %>
                <p>There are no recent tours.</p>
            <% else %>
                <ul class="dashboard_list">
                    <% @tour_histories.each do |tour| %>
                        <li><%= link_to tour.tour.title, [:admin, tour] if tour.tour %></li>
                    <% end %>
                </ul>
            <% end %>
            <p style="text-align: right">
                <%= link_to "More...", admin_tour_histories_path %>
            </p>
        </div>
    </div>
    <div class="span4">
        <div class="bs-docs-example">
            <h3>Recent Users</h3>
            <% if @users.length <= 0 %>
                <p>There are no users.</p>
            <% else %>
                <ul class="dashboard_list">
                    <% @users.each do |user| %>
                        <li><%= link_to user.email, [:admin, user] %></li>
                    <% end %>
                </ul>
            <% end %>
            <p style="text-align: right">
                <%= link_to "More...", admin_users_path %>
            </p>
        </div>
    </div>
</div>


