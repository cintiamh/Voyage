<h1>Comments</h1>

<% if @comments.length <= 0 %>
    <p>There are no comments.</p>
<% else %>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Approved</th>
            <th>Content</th>
            <th>User</th>
            <th>Piece</th>
            <th>Connection</th>
            <th>Tour</th>
            <th></th>
        </tr>

        <% @comments.each do |comment| %>
            <tr>
                <td><%= comment.approved ? "Yes" : "No" %></td>
                <td><%= comment.content %></td>
                <td><%= comment.user.email if comment.user %></td>
                <td><%= comment.piece.title if comment.piece %></td>
                <td><%= comment.connection.title if comment.connection %></td>
                <td><%= comment.tour.title if comment.tour %></td>
                <td style="text-align: center;"><%= link_to raw("<i class='icon-file'></i>"), edit_admin_comment_path(comment), "data-toggle" => "tooltip", "data-placement" => "right", :title => "View", :class => "tooltip_right" %></td>
            </tr>
        <% end %>
    </table>
<% end %>

<%= will_paginate @comments %>