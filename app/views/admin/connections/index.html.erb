<h1>Listing connections</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Piece1</th>
    <th>Piece2</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @connections.each do |connection| %>
  <tr>
    <td><%= connection.title %></td>
    <td><%= connection.description %></td>
    <td><%= connection.piece1 %></td>
    <td><%= connection.piece2 %></td>
    <td><%= link_to 'Show', [:admin, connection] %></td>
    <td><%= link_to 'Edit', edit_admin_connection_path(connection) %></td>
    <td><%= link_to 'Destroy', [:admin, connection], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

