<h1>Listing teasers</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Answer</th>
    <th>Piece</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teasers.each do |teaser| %>
  <tr>
    <td><%= teaser.question %></td>
    <td><%= teaser.answer %></td>
    <td><%= teaser.piece %></td>
    <td><%= link_to 'Show', teaser %></td>
    <td><%= link_to 'Edit', edit_teaser_path(teaser) %></td>
    <td><%= link_to 'Destroy', teaser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

