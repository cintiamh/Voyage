<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signup form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

    <h2 class="form-signin-heading">Sign up</h2>

    <div class="control-group">
        <%= f.label :first_name, "Name", :class => "control-label" %>
        <div class="controls">
            <%= f.text_field :first_name, :class => "input-large" %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :email, :class => "control-label" %>
        <div class="controls">
            <%= f.email_field :email, :class => "input-large" %>
        </div>
    </div>

    <% if f.object.password_required? %>
        <div class="control-group">
            <%= f.label :password, :class => "control-label" %>
            <div class="controls">
                <%= f.password_field :password, :class => "input-large" %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label :password_confirmation, :class => "control-label" %>
            <div class="controls">
                <%= f.password_field :password_confirmation, :class => "input-large" %>
            </div>
        </div>
    <% end %>

    <div><%= f.submit "Sign up", :class => "btn btn-large btn-primary" %></div>
    <br>

    <%= render "devise/shared/links" %>
<% end %>


