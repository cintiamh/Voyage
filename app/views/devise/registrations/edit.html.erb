<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put, :class => "form-signup form-horizontal"}) do |f| %>

    <%= devise_error_messages! %>

    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <div class="control-group">
        <%= f.label :first_name, "Name", :class => "control-label" %>
        <div class="controls">
            <%= f.text_field :first_name, :class => "input-large" %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :email, :class => "control-label" %>
        <div class="controls">
            <%= f.email_field :email, :class => "input-large" %>
        </div>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

        <div class="control-group">
            <%= f.label :password, raw("Password <i>(leave blank if you don't want to change it)</i>"), :class => "control-label" %>
            <div class="controls">
                <%= f.password_field :password, :class => "input-large" %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label :password_confirmation, :class => "control-label" %>
            <div class="controls">
                <%= f.password_field :password_confirmation, :class => "input-large" %>
            </div>
        </div>
    <% if f.object.encrypted_password.blank? %>
        <div class="control-group">
            <%= f.label :current_password, raw("Current Password  <i>(we need your current password to confirm your changes)</id>"), :class => "control-label" %>
            <div class="controls">
                <%= f.password_field :current_password, :class => "input-large" %>
            </div>
        </div>
        <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
            <%= f.password_field :current_password %></div>
    <% end %>

    <div><%= f.submit "Update", :class => "btn btn-large btn-primary" %></div>
    <br>

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => {:confirm => "Are you sure?"}, :method => :delete, :class => "btn btn-danger" %></p>

<%= link_to "Back", "/" %>
