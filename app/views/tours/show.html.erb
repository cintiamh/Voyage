<div class="row-fluid">
    <div class="span4">
        <%= link_to raw("&nbsp;&nbsp;&nbsp;<< Check another tour"), tours_path, :class => "btn btn-info tour-btn" %>
    </div>
</div>

<h1>
    <%= image_tag(@tour.image.url(:medium)) %>
    <%= @tour.title %>
</h1>
<p>
    Press GO when you are ready.
</p>
<% if @tour.pieces.length <= 0 %>
    <p>There are no pieces</p>
<% else %>
    <% @count = 0 %>
    <% @tour.pieces.each do |piece| %>
        <% if @count % 3 == 0 %>
            <div class="row-fluid">
        <% end %>
        <div class="span4">
            <%= link_to image_tag(piece.image.url(:thumb)) + piece.title, "##{piece.id}", :class => "btn btn-warning tour-btn", :role => "button", "data-toggle" => "modal" %>

            <!-- Modal -->
            <div id="<%= piece.id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                    <h3 id="myModalLabel"><%= piece.title %></h3>
                </div>
                <div class="modal-body">
                    <p style="text-align: center;">
                        <%= image_tag(piece.image.url(:large)) %>
                    </p>
                    <h3>Information</h3>
                    <p>
                        <% if piece.informations.length > 0 %>
                            <%= piece.informations.first.before %>
                        <% else %>
                            There are no informations at this moment.
                        <% end %>
                    </p>
                    <% if piece.connections.length > 0 %>
                        <h3>Connections</h3>
                        <% piece.connections.each do |connection| %>
                            <h4><%= connection.title %></h4>
                            <p><%= connection.description %></p>
                            <% connection.pieces.each do |p| %>
                                <%= image_tag(p.image.url(:thumb)) if p.image %>
                            <% end %>
                        <% end %>
                    <% end %>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                </div>
            </div>
        </div>
        <% if @count % 3 == 2 %>
            </div>
        <% end %>
        <% @count += 1 %>
    <% end %>
<% end %>
<div class="row-fluid">
    <div class="span12">
        <div class="row-fluid">
            <div class="span4">
                <%= link_to "GO", "/mobile/floors?identity=#{@tour.id}", :class => "btn btn-danger tour-btn", :style => "text-align: center;" %>
            </div>
        </div>
    </div>
</div>