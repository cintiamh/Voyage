<!DOCTYPE html>
<html>
<head>
    <title>The Voyage Admin Area</title>
    <%= stylesheet_link_tag    "admin", :media => "all" %>
    <%= javascript_include_tag "admin" %>
    <%= csrf_meta_tags %>

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="brand" href="#">The Voyage Admin</a>
            <div class="nav-collapse collapse">
                <ul class="nav admin_nav">
                    <li<%= raw(" class=\"active\"") if @page == "dashboard#index" %>>
                        <%= link_to "Home", admin_dashboard_index_path %>
                    </li>

                    <li class="dropdown <%= raw("active") if @page == "pieces" %>">
                        <%= link_to raw("Pieces <b class='caret'></b>"), admin_pieces_path, :class => "dropdown-toggle", "data-toggle" => "dropdown" %>
                        <ul class="dropdown-menu">
                            <li>
                                <%= link_to "List Pieces", admin_pieces_path %>
                            </li>
                            <li>
                                <%= link_to "New Piece", new_admin_piece_path %>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <%= link_to "List Creators", admin_creators_path %>
                            </li>
                            <li>
                                <%= link_to "New Creator", new_admin_creator_path %>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <%= link_to "List Galleries", admin_galleries_path %>
                            </li>
                            <li>
                                <%= link_to "New Gallery", new_admin_gallery_path %>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown <%= raw("active\"") if @page == "tours" %>">
                        <%= link_to raw("Tours <b class='caret'></b>"), admin_tours_path, :class => "dropdown-toggle", "data-toggle" => "dropdown" %>
                        <ul class="dropdown-menu">
                            <li>
                                <%= link_to "List Tours", admin_tours_path %>
                            </li>
                            <li>
                                <%= link_to "New Tour", new_admin_tour_path %>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown <%= raw("active\"") if @page == "moderate" %>">
                        <%= link_to raw("Moderate <b class='caret'></b>"), admin_users_path, :class => "dropdown-toggle", "data-toggle" => "dropdown" %>
                        <ul class="dropdown-menu">
                            <li>
                                <%= link_to "List Comments", admin_comments_path %>
                            </li>
                            <li>
                                <%= link_to "List Tours", admin_tour_histories_path %>
                            </li>
                            <li>
                                <%= link_to "List Users", admin_users_path %>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
</div>

<div class="container main_content">

    <div class="row">
        <div class="span12" style="text-align: right;">
            <% if user_signed_in? %>
                Logged in as <strong><%= current_user.email %></strong>.&nbsp;|&nbsp;
                <%= link_to 'Edit profile', edit_user_registration_path %>&nbsp;|&nbsp;
                <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
            <% else %>
                <li><%= link_to 'Sign up', new_user_registration_path %></li>
                <li><%= link_to 'Login', new_user_session_path %></li>
            <% end %>
        </div>
    </div>

    <div class="row">
        <div class="span12">
            <%= yield %>
        </div>
    </div>

    <hr>

    <footer>
        <p>&copy; Carnegie Museums of Art and Natural History 2013</p>
    </footer>

</div> <!-- /container -->

</body>
</html>
