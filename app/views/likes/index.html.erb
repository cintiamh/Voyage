<h1>Listing likes</h1>

<table>
  <tr>
    <th>Like</th>
    <th>User</th>
    <th>Piece</th>
    <th>Category</th>
    <th>Connection</th>
    <th>Tour</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @likes.each do |like| %>
  <tr>
    <td><%= like.like %></td>
    <td><%= like.user %></td>
    <td><%= like.piece %></td>
    <td><%= like.category %></td>
    <td><%= like.connection %></td>
    <td><%= like.tour %></td>
    <td><%= like.comment %></td>
    <td><%= link_to 'Show', like %></td>
    <td><%= link_to 'Edit', edit_like_path(like) %></td>
    <td><%= link_to 'Destroy', like, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

